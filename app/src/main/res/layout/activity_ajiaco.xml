<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6"
    tools:context="com.example.interfaces.Ajiaco">

    <TextView
        android:id="@+id/ajiaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ajiaco"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"

        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="33dp" />

    <ImageView
        android:id="@+id/imageAjiaco"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/ajiaco"
        android:layout_alignRight="@id/ajiaco"


        android:layout_marginRight="-15dp"

        app:srcCompat="@drawable/ajiaco1" />

    <ImageView
        android:id="@+id/imageAjiacoIngredientes"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/imageAjiaco"

        app:srcCompat="@drawable/ajiaco_in" />

    <ImageView
        android:id="@+id/imageAjiacoPasos"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/imageAjiacoIngredientes"
        android:layout_marginRight="-55dp"
        app:srcCompat="@drawable/ajiaco_pa" />
</RelativeLayout>
